# ft_transcendence Production Environment Configuration

# Database Configuration
DATABASE_URL=./database/transcendence.sqlite

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long_for_production_use
JWT_EXPIRATION=24h

# Application Configuration  
NODE_ENV=production
PORT=3000

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_DASHBOARD_ENABLED=true
PERFORMANCE_ANALYTICS_ENABLED=true

# AI Configuration
AI_MAX_DECISION_TIME=100
AI_DEFAULT_DIFFICULTY=medium

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true

# Security Headers
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Performance Optimization
MEMORY_OPTIMIZATION=true
CPU_OPTIMIZATION=true
DATABASE_OPTIMIZATION=true
GC_INTERVAL=30000

# Production Features
ENABLE_PERFORMANCE_PROFILING=true
ENABLE_ERROR_REPORTING=true
ENABLE_METRICS_COLLECTION=true