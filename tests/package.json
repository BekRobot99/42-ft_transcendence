{
  "name": "ft_transcendence-tests",
  "version": "1.0.0",
  "description": "Comprehensive unit tests for ft_transcendence AI system",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:mock": "node run-tests.js",
    "test:ci": "jest --ci --watchAll=false --coverage --coverageReporters=lcov,text-summary",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:performance": "node run-tests.js | grep -E '(Performance|benchmark)'",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern='(AIPlayer|GameStateValidator|GameErrorHandler|GameSynchronizer)'"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.18",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup.ts"
    ],
    "testTimeout": 30000,
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "../backend/src/**/*.ts",
      "!../backend/src/**/*.d.ts",
      "!../backend/src/**/*.test.ts"
    ]
  }
}
